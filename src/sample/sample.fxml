<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import java.net.URL?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <stylesheets>
        <URL value="@/css/style.css"/>
    </stylesheets>
    <Label text="Напишите сообщение консультанту" GridPane.rowIndex="0" GridPane.columnIndex="0" prefWidth="300"/>

    <TextField fx:id="textField" GridPane.rowIndex="2" GridPane.columnIndex="0" prefWidth="200" prefHeight="50"
               onAction="#click"/>
    <TextArea fx:id="textArea" GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="200" editable="false" />
    <Button text="Отправить" GridPane.rowIndex="3" GridPane.columnIndex="1"  onAction="#click"/>
</GridPane>